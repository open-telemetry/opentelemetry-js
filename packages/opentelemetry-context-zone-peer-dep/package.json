{
  "name": "@opentelemetry/context-zone-peer-dep",
  "version": "2.5.1",
  "description": "OpenTelemetry Context Zone with peer dependency for zone.js",
  "author": "OpenTelemetry Authors",
  "homepage": "https://github.com/open-telemetry/opentelemetry-js/tree/main/packages/opentelemetry-context-zone-peer-dep",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "./build/index.cjs",
  "module": "./build/index.mjs",
  "types": "./build/index.d.cts",
  "exports": {
    ".": {
      "esnext": {
        "types": "./build/index.d.mts",
        "default": "./build/index.mjs"
      },
      "require": {
        "types": "./build/index.d.cts",
        "default": "./build/index.cjs"
      },
      "import": {
        "types": "./build/index.d.mts",
        "default": "./build/index.mjs"
      }
    }
  },
  "repository": "open-telemetry/opentelemetry-js",
  "scripts": {
    "prepublishOnly": "npm run compile",
    "compile": "tsdown",
    "clean": "rimraf build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "version": "node ../../scripts/version-update.js",
    "tdd": "vitest --config vitest.config.browser.mts",
    "test:browser": "vitest run --config vitest.config.browser.mts",
    "watch": "tsdown --watch",
    "prewatch": "npm run precompile",
    "peer-api-check": "node ../../scripts/peer-api-check.js",
    "align-api-deps": "node ../../scripts/align-api-deps.js"
  },
  "keywords": [
    "opentelemetry",
    "web",
    "tracing",
    "profiling",
    "metrics",
    "stats"
  ],
  "engines": {
    "node": "^18.19.0 || >=20.6.0"
  },
  "files": [
    "build/**/*.cjs",
    "build/**/*.mjs",
    "build/**/*.d.cts",
    "build/**/*.d.mts",
    "build/**/*.map",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@babel/core": "7.27.1",
    "@babel/preset-env": "7.27.2",
    "@opentelemetry/api": ">=1.0.0 <1.10.0",
    "@types/mocha": "10.0.10",
    "@types/node": "18.19.130",
    "@types/sinon": "17.0.4",
    "@types/zone.js": "0.5.12",
    "babel-loader": "10.0.0",
    "mocha": "11.7.5",
    "nyc": "17.1.0",
    "sinon": "18.0.1",
    "typescript": "5.0.4",
    "webpack": "5.104.1",
    "webpack-cli": "6.0.1",
    "zone.js": "0.16.1"
  },
  "peerDependencies": {
    "@opentelemetry/api": ">=1.0.0 <1.10.0",
    "zone.js": "^0.10.2 || ^0.11.0 || ^0.12.0 || ^0.13.0 || ^0.14.0 || ^0.15.0 || ^0.16.0"
  },
  "sideEffects": false
}
