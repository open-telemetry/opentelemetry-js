{
  "name": "@opentelemetry/core",
  "version": "2.5.1",
  "description": "OpenTelemetry Core provides constants and utilities shared by all OpenTelemetry SDK packages.",
  "author": "OpenTelemetry Authors",
  "homepage": "https://github.com/open-telemetry/opentelemetry-js/tree/main/packages/opentelemetry-core",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "./build/index.cjs",
  "module": "./build/index.mjs",
  "browser": {
    "./build/platform/node/index.mjs": "./build/platform/browser/index.mjs",
    "./build/platform/node/environment.mjs": "./build/platform/browser/environment.mjs",
    "./build/platform/node/sdk-info.mjs": "./build/platform/browser/sdk-info.mjs"
  },
  "types": "./build/index.d.cts",
  "exports": {
    ".": {
      "require": {
        "types": "./build/index.d.cts",
        "default": "./build/index.cjs"
      },
      "esnext": {
        "types": "./build/index.d.mts",
        "default": "./build/index.mjs"
      },
      "import": {
        "types": "./build/index.d.mts",
        "default": "./build/index.mjs"
      }
    },
    "./platform": {
      "require": {
        "types": "./build/platform/index.d.cts",
        "default": "./build/platform/index.cjs"
      },
      "esnext": {
        "types": "./build/platform/index.d.mts",
        "default": "./build/platform/index.mjs"
      },
      "import": {
        "types": "./build/platform/index.d.mts",
        "default": "./build/platform/index.mjs"
      }
    },
    "./platform/browser": {
      "require": {
        "types": "./build/platform/browser/index.d.cts",
        "default": "./build/platform/browser/index.cjs"
      },
      "esnext": {
        "types": "./build/platform/browser/index.d.mts",
        "default": "./build/platform/browser/index.mjs"
      },
      "import": {
        "types": "./build/platform/browser/index.d.mts",
        "default": "./build/platform/browser/index.mjs"
      }
    }
  },
  "repository": "open-telemetry/opentelemetry-js",
  "scripts": {
    "prepublishOnly": "npm run compile",
    "compile": "tsdown",
    "clean": "rimraf build",
    "test": "nyc mocha 'test/**/*.test.ts' --exclude 'test/browser/**/*.ts'",
    "test:browser": "vitest run --config vitest.config.browser.mts",
    "tdd": "npm run tdd:node",
    "tdd:node": "npm run test -- --watch-extensions ts --watch",
    "tdd:browser": "vitest --config vitest.config.browser.mts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "version": "node ../../scripts/version-update.js",
    "watch": "tsdown --watch",
    "prewatch": "npm run precompile",
    "test:bench": "node test/performance/benchmark/index.js | tee .benchmark-results.txt",
    "peer-api-check": "node ../../scripts/peer-api-check.js",
    "align-api-deps": "node ../../scripts/align-api-deps.js"
  },
  "keywords": [
    "opentelemetry",
    "nodejs",
    "browser",
    "tracing",
    "profiling",
    "metrics",
    "stats"
  ],
  "engines": {
    "node": "^18.19.0 || >=20.6.0"
  },
  "files": [
    "build/**/*.cjs",
    "build/**/*.mjs",
    "build/**/*.d.cts",
    "build/**/*.d.mts",
    "build/**/*.map",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@opentelemetry/api": ">=1.0.0 <1.10.0",
    "@types/mocha": "10.0.10",
    "@types/node": "18.19.130",
    "@types/sinon": "17.0.4",
    "mocha": "11.7.5",
    "nyc": "17.1.0",
    "sinon": "18.0.1",
    "typescript": "5.0.4"
  },
  "peerDependencies": {
    "@opentelemetry/api": ">=1.0.0 <1.10.0"
  },
  "dependencies": {
    "@opentelemetry/semantic-conventions": "^1.29.0"
  },
  "sideEffects": false
}
