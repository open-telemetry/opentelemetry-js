{
  "name": "@opentelemetry/shim-opentracing",
  "version": "2.5.1",
  "description": "OpenTracing to OpenTelemetry shim",
  "author": "OpenTelemetry Authors",
  "homepage": "https://github.com/open-telemetry/opentelemetry-js/tree/main/packages/opentelemetry-shim-opentracing",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "./build/index.cjs",
  "module": "./build/index.mjs",
  "types": "./build/index.d.cts",
  "exports": {
    ".": {
      "esnext": {
        "types": "./build/index.d.mts",
        "default": "./build/index.mjs"
      },
      "require": {
        "types": "./build/index.d.cts",
        "default": "./build/index.cjs"
      },
      "import": {
        "types": "./build/index.d.mts",
        "default": "./build/index.mjs"
      }
    }
  },
  "repository": "open-telemetry/opentelemetry-js",
  "scripts": {
    "prepublishOnly": "npm run compile",
    "compile": "tsdown",
    "clean": "rimraf build",
    "test": "nyc mocha test/**/*.test.ts",
    "tdd": "npm run test -- --watch-extensions ts --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "version": "node ../../scripts/version-update.js",
    "prewatch": "npm run precompile",
    "peer-api-check": "node ../../scripts/peer-api-check.js",
    "align-api-deps": "node ../../scripts/align-api-deps.js"
  },
  "keywords": [
    "opentelemetry",
    "nodejs",
    "tracing",
    "profiling"
  ],
  "engines": {
    "node": "^18.19.0 || >=20.6.0"
  },
  "files": [
    "build/**/*.cjs",
    "build/**/*.mjs",
    "build/**/*.d.cts",
    "build/**/*.d.mts",
    "build/**/*.map",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@opentelemetry/api": ">=1.0.0 <1.10.0",
    "@opentelemetry/propagator-b3": "2.5.1",
    "@opentelemetry/propagator-jaeger": "2.5.1",
    "@opentelemetry/sdk-trace-base": "2.5.1",
    "@types/mocha": "10.0.10",
    "@types/node": "18.19.130",
    "mocha": "11.7.5",
    "nyc": "17.1.0",
    "typescript": "5.0.4"
  },
  "peerDependencies": {
    "@opentelemetry/api": ">=1.0.0 <1.10.0"
  },
  "dependencies": {
    "@opentelemetry/core": "2.5.1",
    "@opentelemetry/semantic-conventions": "^1.29.0",
    "opentracing": "^0.14.4"
  },
  "sideEffects": false
}
