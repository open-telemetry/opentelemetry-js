{
  "name": "@opentelemetry/web-common",
  "version": "0.212.0",
  "description": "Common utilities for web instrumentation",
  "author": "OpenTelemetry Authors",
  "homepage": "https://github.com/open-telemetry/opentelemetry-js/tree/main/experimental/packages/web-common",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "./build/index.cjs",
  "module": "./build/index.mjs",
  "types": "./build/index.d.cts",
  "exports": {
    ".": {
      "esnext": {
        "types": "./build/index.d.mts",
        "default": "./build/index.mjs"
      },
      "require": {
        "types": "./build/index.d.cts",
        "default": "./build/index.cjs"
      },
      "import": {
        "types": "./build/index.d.mts",
        "default": "./build/index.mjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-telemetry/opentelemetry-js.git"
  },
  "bugs": {
    "url": "https://github.com/open-telemetry/opentelemetry-js/issues"
  },
  "engines": {
    "node": "^18.19.0 || >=20.6.0"
  },
  "scripts": {
    "clean": "rimraf build",
    "compile": "tsdown",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "peer-api-check": "node ../../../scripts/peer-api-check.js",
    "prepublishOnly": "npm run compile",
    "prewatch": "npm run precompile",
    "tdd": "vitest --config vitest.config.browser.mts",
    "test:browser": "vitest run --config vitest.config.browser.mts",
    "version": "node ../../../scripts/version-update.js",
    "watch": "tsdown --watch",
    "align-api-deps": "node ../../../scripts/align-api-deps.js"
  },
  "keywords": [
    "opentelemetry",
    "web",
    "tracing",
    "profiling",
    "stats",
    "monitoring"
  ],
  "files": [
    "build/**/*.cjs",
    "build/**/*.mjs",
    "build/**/*.d.cts",
    "build/**/*.d.mts",
    "build/**/*.map",
    "LICENSE",
    "README.md"
  ],
  "sideEffects": false,
  "peerDependencies": {
    "@opentelemetry/api": ">=1.4.0 <1.10.0"
  },
  "dependencies": {
    "@opentelemetry/sdk-logs": "0.212.0",
    "@opentelemetry/sdk-trace-base": "2.5.1",
    "@opentelemetry/semantic-conventions": "^1.29.0"
  },
  "devDependencies": {
    "@babel/core": "7.27.1",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/api-logs": "0.212.0",
    "@types/mocha": "10.0.10",
    "@types/node": "18.19.130",
    "@types/sinon": "17.0.4",
    "babel-loader": "10.0.0",
    "mocha": "11.7.5",
    "nyc": "17.1.0",
    "sinon": "18.0.1",
    "typescript": "5.0.4",
    "webpack": "5.104.1",
    "webpack-cli": "6.0.1"
  }
}
