{
  "name": "@opentelemetry/context-zone-peer-dep",
  "version": "2.2.0",
  "description": "OpenTelemetry Context Zone with peer dependency for zone.js",
  "author": "OpenTelemetry Authors",
  "homepage": "https://github.com/open-telemetry/opentelemetry-js/tree/main/packages/opentelemetry-context-zone-peer-dep",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "./build/index.cjs",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "esnext": "./build/index.mjs",
      "import": "./build/index.mjs",
      "default": "./build/index.cjs"
    }
  },
  "repository": "open-telemetry/opentelemetry-js",
  "scripts": {
    "prepublishOnly": "npm run compile",
    "compile": "tsdown && tsc -p tsconfig.dts.json",
    "clean": "rm -rf build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "version": "node ../../scripts/version-update.js",
    "tdd": "karma start",
    "test:browser": "karma start --single-run",
    "watch": "tsdown --watch",
    "prewatch": "npm run precompile",
    "peer-api-check": "node ../../scripts/peer-api-check.js",
    "align-api-deps": "node ../../scripts/align-api-deps.js"
  },
  "keywords": [
    "opentelemetry",
    "web",
    "tracing",
    "profiling",
    "metrics",
    "stats"
  ],
  "engines": {
    "node": "^18.19.0 || >=20.6.0"
  },
  "files": [
    "build/**/*.cjs",
    "build/**/*.mjs",
    "build/**/*.d.ts",
    "build/**/*.map",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@babel/core": "7.27.1",
    "@babel/preset-env": "7.27.2",
    "@opentelemetry/api": ">=1.0.0 <1.10.0",
    "@types/mocha": "10.0.10",
    "@types/node": "18.6.5",
    "@types/sinon": "17.0.4",
    "@types/webpack-env": "1.16.3",
    "@types/zone.js": "0.5.12",
    "babel-loader": "10.0.0",
    "babel-plugin-istanbul": "7.0.1",
    "karma": "6.4.4",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage": "2.2.1",
    "karma-mocha": "2.0.1",
    "karma-spec-reporter": "0.0.36",
    "karma-webpack": "5.0.1",
    "mocha": "11.7.5",
    "nyc": "17.1.0",
    "sinon": "18.0.1",
    "ts-loader": "9.5.4",
    "typescript": "5.0.4",
    "webpack": "5.101.3",
    "webpack-cli": "6.0.1",
    "zone.js": "0.16.0"
  },
  "peerDependencies": {
    "@opentelemetry/api": ">=1.0.0 <1.10.0",
    "zone.js": "^0.10.2 || ^0.11.0 || ^0.12.0 || ^0.13.0 || ^0.14.0 || ^0.15.0 || ^0.16.0"
  },
  "sideEffects": false
}
